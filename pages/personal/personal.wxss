.personalContainer{
  height: 100%;
  width: 100%;
}
/* 用户信息部分 */
.uesr-section {
  height: 520rpx;
  /* padding: 100rpx 30rpx 0; */
  position: relative;
  padding: 100rpx 30rpx 0;
}
/* 背景 */
.bg {
  height: 100%;
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
  opacity: 0.7;
  filter: blur(1px);
  z-index: -2;
}
/* 头像&用户名 */
.user-info-box{
  height: 180rpx;
  display: flex;
  align-items: center
}
/* 头像 */
.portrait-box .portrait{
  height: 130rpx;
  width: 130rpx;
  border:5rpx solid #fff;
  border-radius: 50%;
}
/* 用户名 */
.info-box .userName{
  font-size: 24;
  color: #303133;
  margin-left: 10rpx;
}
/* 会员盒子 */
.vip-card-box {
  height: 240rpx;
  /* background: #000;
  opacity: 0.7; */
  background: rgba(0, 0, 0, .7);
  color: #f7d680;
  position: relative;
  border-radius: 16rpx 16rpx 0 0;
  padding: 20rpx 24rpx;
}
/* 会员背景图 */
.vip-card-box .card-bg{
  width: 380rpx;
  height: 260rpx;
  position: absolute;
  top: 20rpx;
  right: 0;
  /* z-index: 0; */
}
/* 会员内容 */
.vip-card-title {
  display: flex;
  flex-direction: column
}
/* 会员头部title */
.vip-card-title .title-top {
  display: flex;
  justify-content: space-between; 
}
/* 会员头部皇冠 */
.vip-card-title .title-top .iconfont {
  color: #f6e5a3;
  font-size: 36rpx;
}
/* 会员头部text */
.vip-card-title .title-top .vipText {
  font-size: 24rpx;
  color: #f7d680;
  margin-left: 16rpx;
}
/* 会员头部立即开通button */
.vip-card-title .title-top .openVipBtn {
  /* width: 132rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  font-size: 24rpx;
  color: #36343c;
  border-radius: 20px;
  background: #f9e6af; */
  position: absolute;
  right: 20rpx;
  top: 16rpx;
  width: 132rpx;
  height: 40rpx;
  text-align: center;
  line-height: 40rpx;
  font-size: 24rpx;
  color: #36343c;
  border-radius: 20px;
  /*background: linear-gradient(left, #f9e6af, #ffd465);*/ /*渐变不生效*/
  background: #f9e6af;
  z-index: 1;
  
}
/* 会员3个view的距离 */
.vip-card-title view{
  margin: 10rpx 0;
}
/* 会员文本信息 */
.vip-card-title .e-m{
  font-size: 34rpx;
  margin-top: 10rpx;
}
.vip-card-title .e-b{
  font-size: 26rpx;
  color: #d8cba9;
  margin-top: 10rpx;
}

/* 内容覆盖部分 */
.cover-container {
  margin-top: -150rpx;
  position: relative;
  background:#f5f5f5; 
  /* height: 600rpx; */
  padding: 0 30rpx;

}
.cover-container .arc {
  position: absolute;
  width: 100%;
  height: 36rpx;
  top:-34rpx;
  left: 0;
}
.nav-section {
  background:white;
  padding: 20rpx 0;
  display: flex;
}
.nav-section .nav-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1
}
.nav-item .iconfont{
  font-size: 50rpx;
  color: #d43c33;
  line-height: 70rpx;
}
.nav-section .nav-item text:last-child {
  font-size: 22rpx;
}
/* 个人中心 */
.recentPlayContainer {
  /* width: 100%; */
  /* height: 80rpx; */
  background: #fff;
  margin-top: 20rpx;
  line-height: 80rpx;
  font-size: 26rpx;
  color: #333;
}
.cardList {
  margin-top: 20rpx;

}
.cardList .card-item{
  border-top: 1rpx solid #eee;
  background: #fff;
  height: 80rpx;
  line-height: 80rpx;
  padding: 10rpx;
  font-size: 26rpx;
  color: #333;
}
.cardList .card-item .more {
  float: right;
}
.recentScoll{
  display: flex;
  height: 200rpx;
}
.recentItem{
   margin: 0 10rpx;
}
.recentItem image{
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}