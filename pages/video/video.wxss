.videoContainer .header{
  display: flex;
}
.header image {
  height: 60rpx;
  width: 60rpx;
  margin: 0 5rpx;
}
.header .search{
  flex: 1;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  border: 1rpx solid #eee;
  color: #d43c33;
  margin: 0 20rpx;
}
/* 导航区域 */
.navScroll {
  display: flex;
  white-space: nowrap;
  height:65rpx;
}
.nav-item {
  padding: 0 30rpx;
  font-size: 28rpx;
  height: 60rpx;
  line-height: 60rpx;
}
.nav-item .active {
  border-bottom: 4rpx #d43c33 solid;
}
.videoScroll {
  background: #f5f5f5;
  height: calc(100vh - 126rpx);
}
.videoItem {
  padding: 0 3%;
  background: #fff;
  margin-top: 18rpx;
}
/* .videoItem video {
  width: 100%;
  height: 360rpx;
  border-radius: 10rpx;
} */
.videoItem .videoAndImage {
  width: 100%;
  height: 360rpx;
  border-radius: 10rpx;
}
.videoItem .content {
  font-size: 28rpx;
  /* border: 1rpx solid #d43c33; */
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #eee;
  margin: 20rpx 0;
}
.footer {
  display: flex;
  margin: 10rpx 0;
  justify-content: flex-start
}
.footer image {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
}
.footer .authorName {
  font-size: 28rpx;
  padding-left: 10rpx;
  width: 350rpx;
  line-height: 64rpx;
  text-align: left;
}
.footer view{
  height: 64rpx;
  line-height: 64rpx;
  text-align: center
}
.btn {
  display: inline;
  padding: 0;
  background-color: transparent;
  border-color: transparent;
}

 .btn:after {
  border: none;
}
.item {
  margin-left: 50rpx;
  margin-top: 10rpx;
  position: relative;
}
.item text {
  font-size: 28rpx;
}
.praised {
  position: relative;
}
.praised text:first-child{
  font-size: 50rpx;
}
.praised .count{
  position: absolute;
  top: -20rpx;
  right: -30rpx;
  font-size: 20rpx;
}

.comment {
  position: relative;
  margin-left: 40rpx;
}
.comment text:first-child{
  font-size: 50rpx;
}
.comment .count{
  position: absolute;
  top: -20rpx;
  right: -42rpx;
  font-size: 20rpx;
}
 