/* pages/index/index.wxss */
/* 轮播区域 */
.banners {
  width: 100%;
  height: 300rpx;
}
.banners image {
  width: 100%;
  height: 100%;
}
/* 图标导航区域 */
.navContainer {
  display: flex;
  justify-content: space-between
}
.navItem {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 20%;
}
.navItem > .iconfont {
  height: 100rpx;
  width: 100rpx;
  background-color: rgb(240,19,19);
  border-radius: 50%;
  line-height: 100rpx;
  text-align: center;
  font-size: 50rpx;
  color: white;
  margin: 20rpx 0;
}
/* 推荐歌曲区域 */
.recommendContainer {
  margin: 10rpx;
}
/* 推荐内容区滑块scroll-view */
.recommendScroll {
  height: 300rpx;
  display: flex;
  margin-top: 20rpx;
}
.scrollItem {
  width: 200rpx;
  margin-right: 20rpx;
}
.scrollItem image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}
.scrollItem text {
  font-size: 26rpx;
  /* 文本多行溢出  省略号代替 */
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-box-orient: vertical; /* 设置对其模式 */
  -webkit-line-clamp: 2; /* 设置多行的模式 */
}
/* 排行榜 */
.topList {
  padding: 20rpx;
}
.topListSwiper {
  height: 400rpx;
}
/* 排行榜内容区域 */
.swiperItem {
  width: 96%;
  background: #fbfbfb;
}
.topListSwiper .swiperItem .title {
  font-size: 30rpx;
  line-height: 80rpx;
}
.musicItem {
  display: flex;
  margin: 10rpx 0;
}
.musicItem image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 6rpx;
}
.musicItem .count {
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
}
.musicItem .musicName {
  height: 100rpx;
  line-height: 100rpx;
  max-width:400rpx; 
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}