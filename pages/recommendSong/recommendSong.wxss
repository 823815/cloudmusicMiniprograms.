.recommendSong .header {
  position: relative;
  height: 300rpx;
  width: 100%;
}
.header image {
  width: 100%;
  height: 100%;
}
.header .date {
  position: absolute;
  bottom: 0rpx;
  right: 0rpx;
  margin-right: 225rpx;
  width: 300rpx;
  height: 300rpx;
  text-align: center;
  line-height: 300rpx;
}
.listContainer {
  position: relative;
  top: -20rpx;
  border-radius: 30rpx;
  padding: 0 20rpx;
  background: #fff;
}

.listContainer .listHeader {
  display: flex;
  justify-content: space-between;
  height: 80rpx;
  line-height: 80rpx;
}
.listScroll {
  height: calc(100vh - 380rpx);
}
.scrollItem {
  display: flex;
  margin: 20rpx 0;
}
.scrollItem image {
  height: 80rpx;
  width: 80rpx;
  border-radius: 8rpx;
}
.scrollItem .musicInfo {
  display: flex;
  flex-direction: column;
  margin-left: 10rpx;
  flex: 1;
}
.musicInfo text {
  height: 40rpx;
  line-height: 40rpx;
  font-size: 24rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 400rpx;
}
.scrollItem .iconfont {
  width: 80rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}