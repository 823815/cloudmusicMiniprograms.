.playSongContainer {
  height: 100%;
  background: rgba(0,0,0,0.5);
  display: flex;
  flex-direction: column;
  align-items: center;
}
.circle {
  position: relative;
  z-index: 100;
  height: 60rpx;
  width: 60rpx;
  border-radius: 50%;
  background: #fff;
  margin: 10rpx 0;
  /* border: 1rpx solid red; */
}
.needle {
  position: relative;
  z-index: 99;
  top: -31rpx;
  left: 60rpx;
  height: 250rpx;
  width: 201rpx;
  transform-origin: 40rpx 0;
  transform: rotate(-20deg);
  transition: transform 1s;
  /* border: 1rpx solid red; */
}
.needleRotate {
  transform: rotate(0deg);
}
.cipan {
  position: relative;
  top: -175rpx;
  width: 600rpx;
  height: 600rpx;
  /* border: 1rpx solid red; */
}
.cipanAnimation {
  animation: cipan 4s linear infinite;
  animation-delay: 1s;
}
@keyframes cipan{
  from{
    transform: rotate(0deg)
  }
  to{
    transform: rotate(360deg)
  }
}
.disc {
  height: 600rpx;
  width: 600rpx;
}
.songPicture {
  position: absolute;
  top: 118rpx;
  left: 118rpx;
  width: 364rpx;
  height: 364rpx;
  /* top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  margin: auto; */
  border-radius: 50%;
}
.musicControl {
  position: absolute;
  width: 100%;
  display: flex;
  bottom: 40rpx;
  left: 0;
  border-top: 1rpx solid #fff;
}
.musicControl text {
  flex: 1;
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
  color: #fff;
  font-size: 50rpx;
}
.musicControl text.big{
  font-size: 80rpx;
}